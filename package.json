{
  "name": "semaphore-test-repo",
  "description": "A test repo for trying out Semaphore CI",
  "main": "index.js",
  "private": true,
  "scripts": {
    "test": "node node_modules/jasmine/bin/jasmine.js --config=src/spec/support/jasmine.json"
  },
  "author": "",
  "license": "ISC",
  "release": {
    "prepare": [
      {
        "path": "@semantic-release/npm",
        "npmPublish": false,
        "tarballDir": "dist"
      }
    ],
    "plugins": [
      "@semantic-release/npm",
      [
        "@semantic-release/commit-analyzer",
        {
          "releaseRules": [
            {
              "type": "refactor",
              "release": "patch"
            },
            {
              "type": "docs",
              "release": "patch"
            },
            {
              "type": "test",
              "release": "patch"
            },
            {
              "type": "style",
              "release": "patch"
            },
            {
              "type": "perf",
              "release": "patch"
            },
            {
              "type": "ci",
              "release": "patch"
            },
            {
              "type": "build",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": ":sparkles: Novidades",
                "hidden": false
              },
              {
                "type": "fix",
                "section": ":bug: Correções",
                "hidden": false
              },
              {
                "type": "docs",
                "section": ":memo: Documentação",
                "hidden": false
              },
              {
                "type": "style",
                "section": ":barber: Estilização",
                "hidden": false
              },
              {
                "type": "refactor",
                "section": ":zap: Refatoração",
                "hidden": false
              },
              {
                "type": "perf",
                "section": ":fast_forward: Desempenho",
                "hidden": false
              },
              {
                "type": "test",
                "section": ":white_check_mark: Testes",
                "hidden": false
              },
              {
                "type": "ci",
                "section": ":repeat: CI",
                "hidden": false
              },
              {
                "type": "chore",
                "hidden": true
              }
            ]
          }
        }
      ]
    ]
  },
  "devDependencies": {
    "@semantic-release/npm": "^7.0.10",
    "conventional-changelog-eslint": "^3.0.9",
    "jasmine": "^2.8.0",
    "semantic-release": "^17.4.2",
    "typescript": "^2.5.3"
  },
  "dependencies": {
    "@types/jasmine": "^2.6.2",
    "conventional-changelog-conventionalcommits": "^4.5.0"
  }
}
